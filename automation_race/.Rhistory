"prob_computerization",
"tot_employed",
"men_num",
"women_num",
"asian_num",
"black_num",
"hisp_latino_num",
"white_num")]
colnames(data_num)[4] <- "men"
colnames(data_num)[5] <- "women"
colnames(data_num)[6] <- "asian"
